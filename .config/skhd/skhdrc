# Windows

# Toggle window float
shift + cmd - 0x32 : yabai -m window --toggle float --grid 4:4:1:1:2:2

# Change window focus within space
cmd - k : yabai -m window --focus north
cmd - l : yabai -m window --focus east
cmd - j : yabai -m window --focus south
cmd - h : yabai -m window --focus west

# Swap windows
shift + cmd - k : yabai -m window --swap north
shift + cmd - l : yabai -m window --swap east
shift + cmd - j : yabai -m window --swap south
shift + cmd - h : yabai -m window --swap west

# Move window and split
alt + cmd - k : yabai -m window --warp north
alt + cmd - l : yabai -m window --warp east
alt + cmd - j : yabai -m window --warp south
alt + cmd - h : yabai -m window --warp west

# Displays

# Change focus between external displays
ctrl + cmd - k : yabai -m display --focus north 
ctrl + cmd - l : yabai -m display --focus east
ctrl + cmd - j : yabai -m display --focus south
ctrl + cmd - h : yabai -m display --focus west

# Move window to display
ctrl + shift + cmd - k : yabai -m window --display north; yabai -m display --focus north;
ctrl + shift + cmd - l : yabai -m window --display east; yabai -m display --focus east;
ctrl + shift + cmd - j : yabai -m window --display south; yabai -m display --focus south;
ctrl + shift + cmd - h : yabai -m window --display west; yabai -m display --focus west;

# Spaces

# Move window to prev and next space
# shift + cmd - p : yabai -m window --space prev;
# shift + cmd - n : yabai -m window --space next;

# Move window to space 
ctrl + cmd - 1 : yabai -m window --space 1;
ctrl + cmd - 2 : yabai -m window --space 2;
ctrl + cmd - 3 : yabai -m window --space 3;
ctrl + cmd - 4 : yabai -m window --space 4;
ctrl + cmd - 5 : yabai -m window --space 5;
ctrl + cmd - 6 : yabai -m window --space 6;
ctrl + cmd - 7 : yabai -m window --space 7;
ctrl + cmd - 8 : yabai -m window --space 8;
ctrl + cmd - 9 : yabai -m window --space 9;

# Move to space. Won't work without SIP partially disabled
ctrl + shift - 1 : yabai -m space --focus 1;
ctrl + shift - 2 : yabai -m space --focus 2;
ctrl + shift - 3 : yabai -m space --focus 3;
ctrl + shift - 4 : yabai -m space --focus 4;
ctrl + shift - 5 : yabai -m space --focus 5;
ctrl + shift - 6 : yabai -m space --focus 6;
ctrl + shift - 7 : yabai -m space --focus 7;
ctrl + shift - 8 : yabai -m space --focus 8;

# Flip along y-axis
# ctrl + cmd - y : yabai -m space --mirror y-axis

# Flip along x-axis # Conflicts
# ctrl + cmd - x : yabai -m space --mirror x-axis

# Balance out tree of windows (resize to occupy same area)
shift + cmd - 0x18 : yabai -m space --balance

# Terminals

# Open kitty
ctrl - t : /Applications/kitty.app/Contents/MacOS/kitty -d ~

# Test
ctrl + shift + cmd - b : yabai -m space --destroy
